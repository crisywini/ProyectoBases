                  <ComboBox fx:id="comboJob" prefHeight="26.0" prefWidth="317.0" promptText="Selecciona el cargo" style="-fx-background-radius: 20;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <DatePicker fx:id="startDate" prefHeight="26.0" prefWidth="273.0" promptText="Ingresa la fecha inicio" GridPane.columnIndex="1" GridPane.rowIndex="2" />
