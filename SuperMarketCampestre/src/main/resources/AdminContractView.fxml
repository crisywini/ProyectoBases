          <TableColumn fx:id="codeColumn" prefWidth="75.0" text="Código" />
          <TableColumn fx:id="idEmployeeColumn" prefWidth="75.0" text="Empleado" />
            <TableColumn fx:id="contractTypeColumn" prefWidth="75.0" text="Término" />
            <TableColumn fx:id="startDateColumn" prefWidth="75.0" text="Fecha Inicio" />
            <TableColumn fx:id="endDateColumn" prefWidth="75.0" text="Fecha Fin" />
            <TableColumn fx:id="jobColumn" prefWidth="75.0" text="Cargo" />
            <TableColumn fx:id="salaryColumn" prefWidth="75.0" text="Sueldo" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER" prefHeight="51.0" prefWidth="700.0" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleRemoveButton" style="-fx-background-radius: 20;" text="Eliminar" />
            <Button mnemonicParsing="false" onAction="#handleSelectButton" style="-fx-background-radius: 20;" text="Seleccionar" />
            <Button mnemonicParsing="false" onAction="#handleUpdateButton" style="-fx-background-radius: 20;" text="Modificar" />
         </children>
      </HBox>
