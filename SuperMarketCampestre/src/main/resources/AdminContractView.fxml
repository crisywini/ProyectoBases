                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleAddButton" style="-fx-background-radius: 20;" text="Agregar Contrato" />
                     </children>
                  </HBox>
                  <TextField fx:id="salaryField" promptText="Ingresa el sueldo" style="-fx-background-radius: 20;" GridPane.columnIndex="1" />
